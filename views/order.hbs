<h1>{{title}}</h1>

<form method="POST" action="/confirm">

    <fieldset class="column">

        <legend>Review your order</legend>

        <div>
            <div class="line">
                <p>Pizza Type: </p>
                <p>{{pizza_type}}</p>
            </div>

            <div class="line">
                <p>Pizza Size: </p>
                <p>{{pizza_size}}</p>
            </div>

            <div class="line">
                <p>How many pizzas:</p>
                <p> {{qtty}}</p>
            </div>

            <div class="line">
                <p>Pizza toppings:</p>
                <p> {{toppings}}</p>
            </div>

            <div class="line">
                <p>Client Name:</p>
                <p> {{first_name}} {{last_name}}</p>
            </div>

            <div class="line">
                <p>Address:</p>
                <p> {{address}}</p>
            </div>

            <div class="line">
                <p>Phone:</p>
                <p> {{phone}}</p>
            </div>

            <div class="line">
                <p>Total:</p>
                <p><b>${{total}}</b></p>
            </div>

        </div>

    </fieldset>

    <input id="confirm" type="submit" name="confirm" value="Confirm Order">

</form>

<!-- 
            input to cancel the order and go back to the main page
        -->
<form action="/" method="POST" id="cancel_form">

    <input id="cancel" type="submit" name="cancel" value="Cancel Order" class="cancel">

</form>